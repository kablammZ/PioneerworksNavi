    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @event do |f| %>
  <p><%= f.label :name %><br>
     <%= f.text_field :name %></p>

  <p><%= f.label :description %><br>
     <%= f.text_area :description %></p>

  <p><%= f.label :start_date %><br>
     <%= f.datetime_select :start_date, :ampm => true, :discard_year => true %></p>

  <p><%= f.label :end_date %><br>
     <%= f.datetime_select :end_date, :ampm => true, :discard_year => true %></p>

  <%= f.submit 'New Event!' %>
<% end %>
